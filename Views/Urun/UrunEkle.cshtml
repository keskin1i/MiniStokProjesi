@model _50DersteMvc.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" placeholder="Buraya Ürün Adı Yazılacak..." required=""/>
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="MARKA" placeholder="Buraya Marka Yazınız..." required=""/>
    </div>
    <div>
        <label>Ürün Kategori</label>
      @Html.DropDownListFor(x=>x.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.deger,new {@class = "form-control"})
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" required=""/>
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="STOK" required=""/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>

</form>